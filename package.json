{
	"name": "@sourceregistry/sveltekit-service-manager",
	"version": "1.0.1",
	"description": "Typed Server-Sent Events (SSE) integration for **SvelteKit** featuring strongly typed client-server communication, custom event channels, and first-class TypeScript support.",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"build:docs": "typedoc src/lib/client/index.ts src/lib/server/index.ts src/lib/index.ts --out generated/docs --name \"sveltekit-service-manager\" --theme default --excludePrivate --excludeProtected --includeVersion --entryPointStrategy expand"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/client/index.js",
	"types": "./dist/client/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/client/index.d.ts",
			"import": "./dist/client/index.js"
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": "./dist/server/index.js"
		},
		"./client": {
			"types": "./dist/client/index.d.ts",
			"import": "./dist/client/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/npm": "^12.0.2",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^25.0.3",
		"@vitest/browser-playwright": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.16",
		"playwright": "^1.57.0",
		"publint": "^0.3.15",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SourceRegistry/sveltekit-service-manager.git"
	},
	"keywords": [
		"services",
		"service",
		"microservice",
		"microservices",
		"service-manager",
		"sveltekit-service-manager"
	],
	"author": "A.P.A. Slaa (a.p.a.slaa@projectsource.nl)",
	"license": "Apache-2.0",
	"homepage": "https://sourceregistry.github.io/sveltekit-service-manager/",
	"bugs": {
		"url": "https://github.com/SourceRegistry/sveltekit-service-manager/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"CHANGELOG.md"
					],
					"message": "sveltekit-service-manager(release): ðŸš€ v${nextRelease.version}\n\n${nextRelease.notes}"
				}
			]
		]
	}
}
